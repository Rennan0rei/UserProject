class Pessoa:
    def __init__(self, nome, idade, genero, ano_atual):
        self.nome = nome
        self.idade = idade
        self.genero = genero
        self.ano_atual = ano_atual

    def cumprimentar(self):
        return f"Olá, meu nome é {self.nome}."

    def aniversario(self):
        self.idade += 1
        return f"Parabéns, {self.nome}! Agora você tem {self.idade} anos."

    def calcular_ano_nascimento(self):
        ano_nascimento = self.ano_atual - self.idade
        return ano_nascimento
